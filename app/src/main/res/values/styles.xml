<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textColor">@color/gray_light</item>
    </style>
    <style name="Text.Medium.Big">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="Text.Medium.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Dark">
        <item name="android:textColor">@color/black_light</item>
    </style>
    <style name="Text.Dark.Big">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="Text.Dark.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Light">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Text.Light.Big">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="Text.Light.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>
