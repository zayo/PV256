<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/background_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:src="@drawable/test"
                />

            <LinearLayout
                android:id="@+id/bg_base_info"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                >
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="@dimen/padmar_normal"
                android:layout_marginStart="@dimen/padmar_normal"
                android:layout_marginBottom="@dimen/padmar_normal"
                >
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="200dp"
                    android:src="@drawable/test"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|start"
                    android:layout_gravity=""
                    android:paddingLeft="@dimen/padmar_normal"
                    android:paddingStart="@dimen/padmar_normal"
                    android:paddingRight="@dimen/padmar_normal"
                    android:paddingEnd="@dimen/padmar_normal"
                    >
                    <TextView
                        style="@style/Text.Light.Big"
                        android:id="@+id/info_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:text="The Greys asdfasdfa sdfasdf sadf asd fasdfasd sdfasdfsad f"
                        />
                    <TextView
                        style="@style/Text.Light.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="original nazev filmu"
                        android:layout_marginTop="@dimen/grid_spacing"
                        android:maxLines="2"
                        />
                    <TextView
                        style="@style/Text.Light.Small"
                        android:id="@+id/info_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|start"
                        android:layout_gravity="bottom"
                        android:singleLine="true"
                        android:text="2025"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                style="@style/Text.Medium.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cast"
                android:padding="@dimen/padmar_normal"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    style="@style/Text.Dark.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:padding="@dimen/padmar_normal"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light"
                />

            <TextView
                style="@style/Text.Medium.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:padding="@dimen/padmar_normal"
                android:textStyle="bold"
                />
            <TextView
                style="@style/Text.Dark.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test safljlaskjdflaksjdlfkjaslkdfjlask jjlfkasjfl kasjdflakjoagjeklefljsdglk asldfkjasldk fjalsjhaek5ensjlf nlkasb iaiwuh sdlfjanskdjb iabjdklfsj adlskfjhaskd j"
                android:padding="@dimen/padmar_normal"
                />
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@drawable/ic_add"
            app:layout_anchor="@id/background_iv"
            app:layout_anchorGravity="bottom|right|end"
            />

    </android.support.design.widget.CoordinatorLayout>
</ScrollView>